<!doctype html>

<html lang="en">

<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1">

<style>
html { box-sizing: border-box; }
*, *:before, *:after { box-sizing: inherit; }

pre {
    font-family: 'Fira Mono', 'Source Code Pro', 'Cascadia Mono', monospace;
    border: solid 15px black;
    border-radius: 5px;
}

.cursor {
    background: white;
    animation: blink .75s ease-in-out infinite alternate;
    will-change: transform;
}

.cursor-smooth-move {
    transition: transform 0.15s cubic-bezier(0,.4,.45,.90);
}

@keyframes blink {
    from {
        opacity: 0.9;
    }
    to {
        opacity: 0.1;
    }
}
</style>

<title>Terminal Demo</title>

<pre id="terminal"><span style="display:block;padding:0 0 37em;background:black;color:white">JavaScript is required for the terminal.</span></pre>

<script>{{ runtime_contents|safe }}</script>
<script src="/static/dist/{{ mainjs }}"></script>

</html>
